//reset and fill
*, *::after, *::before 
  box-sizing border-box
  margin 0
  padding 0


body, html
  display flex
  flex 1
  height 100%
  width 100%
  justify-content center
  flex-direction column
 
 


//SKIN

.basic-flex-layout
  display flex
  flex 1

  .filterUI-box
    flex-shrink 0

  .filterUI-coll
    display flex
    flex-direction column
    overflow-y scroll
    flex 1

  .filterUI-buttonPanel
    flex-shrink 0
    display flex

  .filterUI-filterButton
    flex 1
   
.padding-skin
  .filterUI-filterButton
    padding 0.5rem
    margin 0.2rem
  .filterUI-buttonPanel
    margin-bottom 1rem
  .filterUI-coll
    padding 1rem
  .filterUI-box
    padding 0.5rem
    margin-bottom 1rem
    border 1px solid black
    
    
.color-skin
  .filterUI-filterBox
    background #FF4136
  .filterUI-msgBox
    background #01FF70
  .filterUI-filter
    background #FF851B
  .filterUI-display
    background #2ECC40
    
//APP CSS
.meta
  display flex
  border-bottom 1px solid black

.name, .date
  flex 1

.date
  text-align right
  
.msg
  padding 0.5rem
